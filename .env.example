# Image Scraper API - Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=production
PORT=3001

# VPS Storage Configuration
VPS_UPLOAD_DIR=./uploads/images
VPS_BASE_URL=https://scraper.troxen.cloud

# CORS Configuration (for production)
CORS_ORIGIN=https://scraper.troxen.cloud,https://troxen.cloud

# Proxy Configuration (Optional)
# PROXY_LIST=http://proxy1:port,http://proxy2:port

# Firebase Configuration (Optional - if using Firebase storage)
# FIREBASE_API_KEY=your_firebase_api_key
# FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_STORAGE_BUCKET=your_bucket.appspot.com
# FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# FIREBASE_APP_ID=your_app_id
# FIREBASE_MEASUREMENT_ID=your_measurement_id

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log